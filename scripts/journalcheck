#!/bin/bash
JOURNAL="$HOME/.journal"

if [[ -f $JOURNAL ]] && [[ $(wc -l <"$JOURNAL") -gt 0 ]]; then
  cat <<'EOF'
  _____      _   _     _       _    
 |  __ \    | | | |   (_)     | |   
 | |__) |___| |_| |__  _ _ __ | | __
 |  _  // _ \ __| '_ \| | '_ \| |/ /
 | | \ \  __/ |_| | | | | | | |   < 
 |_|  \_\___|\__|_| |_|_|_| |_|_|\_\
EOF
else
  cat <<'EOF'
   _____      _                 
  / ____|    | |                
 | |     __ _| |_ __ ___   __ _ 
 | |    / _` | | '_ ` _ \ / _` |
 | |___| (_| | | | | | | | (_| |
  \_____\__,_|_|_| |_| |_|\__,_|
EOF
fi
